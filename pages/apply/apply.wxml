<view class="container">
  <view class="page-body">
    <view class="weui-panel user-panel">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text">
          <view class="weui-media-box__title weui-media-box__title_in-text">个人信息</view>
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta user_meta">姓名: 刘江龙{{user.nickname}}</view>
            <view class="weui-media-box__info__meta weui-media-box__info__meta_extra user_meta">类型: 本科{{user.user_type}}</view>
            <view class="weui-media-box__info__meta weui-media-box__info__meta_extra user_meta">学院: 软件学院{{user.college}}</view>
          </view>
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta user_meta">通过课程数: 15{{user.nickname}}</view>
            <view class="weui-media-box__info__meta weui-media-box__info__meta_extra user_meta">已获得学分: 83{{user.user_type}}</view>
            <view class="weui-media-box__info__meta weui-media-box__info__meta_extra user_meta">不及格门数: 0{{user.college}}</view>
          </view>
        </view>
      </view>
    </view>
    <block wx:if="1">
      <block wx:for="123" wx:for-index="idx" wx:for-item="item" wx:key="*this">
        <view class="weui-panel">
          <view hover-class="navigator-hover">
            <view class="weui-panel__bd">
              <view class="weui-media-box weui-media-box_text">
                <view class="weui-media-box__title weui-media-box__title_in-text">人工智能{{item.course_name}}</view>
                <view class="weui-media-box__desc">啦啦啦啦{{item.outline}}</view>
                <view class="weui-media-box__info">
                  <view class="weui-media-box__info__meta">课程编号：{{item.activity_num}} </view>
                  <view class="weui-media-box__info__meta">学分：{{item.score}} </view>
                  <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">考试日期: {{item.course_time}}</view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </block>
    <block wx:elif="{{course_list === false}}">
      <view class="weui-panel">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">您还没报名课程呢</view>
            <view class="weui-media-box__desc">请报名后再查询</view>
          </view>
        </view>
      </view>
    </block>
  </view>

  <include src="../foot/foot.wxml" />
</view>